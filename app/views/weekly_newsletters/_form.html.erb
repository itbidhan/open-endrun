
<%= form_for(@weekly_newsletter) do |f| %>
  <% if @weekly_newsletter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@weekly_newsletter.errors.count, "error") %> prohibited this weekly_newsletter from being saved:</h2>

      <ul>
      <% @weekly_newsletter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="weekly-newsletter-label">Campaign Name <small>(Not public.)</small></label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
    <label class="weekly-newsletter-label">Email Subject Line</label>
    <%= f.text_area :email_subject, rows: 1, cols: 80, class: 'form-control' %>
  </div>
  <div class="field">
    <label class="weekly-newsletter-label">Byline <small>(HTML. Empty will default to Andrew Cohen.)</small></label>
    <%= f.text_area :byline, rows: 2, cols: 80, class: 'form-control' %>
  </div>
  <div class="field">
    <label class="weekly-newsletter-label" style="margin-right: 10px;">Published Date and Time</label>
    <%= f.datetime_select :published_at %>
  </div>
  <div class="field">
    <label class="weekly-newsletter-label" style="margin-right: 10px;">Published?</label>
    <%= f.check_box :public %>
  </div>


  <div class="field">
    <label class="weekly-newsletter-label">Introduction <small>(Markdown.)</small></label>
    <%= f.text_area :opening_graf, cols: 100, rows: 12, class: 'form-control' %>
  </div>
  <div class="field">
    <label class="weekly-newsletter-label">Best of TMP <small>(Markdown.)</small></label>
    <%= f.text_area :tmp_stories, cols: 100, rows: 30, class: 'form-control' %>
  </div>
    <div class="field">
    <label class="weekly-newsletter-label">Best of the Rest <small>(Markdown.)</small></label>
    <%= f.text_area :other_stories, cols: 100, rows: 45, class: 'form-control' %>
  </div>
  <div class="field">
    <label class="weekly-newsletter-label">Verbatim <small>(Markdown.)</small></label>
    <%= f.text_area :quote_graf, cols: 100, rows: 12, class: 'form-control' %>
  </div>

<br>
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-primary btn-lg' %>
  </div>
<br>
<% end %>

