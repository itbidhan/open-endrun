<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <% if @link.persisted? %>
    <em>Added by <%= @link.creator.email rescue @link.creator_id %></em><br>  
  <% end %>

  <hr>

  <div class="form-group">
    <label class="col-sm-2 control-label">URL</label>
    <div class="col-sm-10">
      <%= f.text_area :url, rows: 1, class: 'form-control' %>
    </div>
  </div>

   <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <%= f.text_area :title, rows: 1, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Summary</label>
    <div class="col-sm-10">
      <%= f.text_area :content, rows: 3, class: 'form-control' %>
    </div>
  </div>

<% if @link.persisted? %>
  <div class="form-group">

    <label class="col-sm-2 control-label">Tags</label>
      <div class="col-sm-10">
      <br>
        <div id="rattlecan-app"></div>
      </div>
      </div>
<% end %>  

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<% if @link.persisted? %>
<%= render 'rattle_can/app', item: @link %>
<% end %>
