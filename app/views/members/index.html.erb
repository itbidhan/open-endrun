<h1>Members</h1>
<style>
.member-is-active {
  background-color: rgba(0,255,0,0.2) !important;
}
</style>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Token</th>
      <th>Last seen at</th>
      <th>Last IP</th>
      <th>Unique IPs</th>
      <th>Views</th>
      <th>Active?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= link_to member.token, member_auth_with_token_url(member.token) %></td>
        <td><%= time_ago_in_words(member.last_seen_at) rescue '?' %></td>
        <td><%= member.last_ip %></td>
        <td><%= member.unique_ips %></td>
        <td><%= member.total_views %></td>
        <td class="<%= member.active? ? 'member-is-active' : 'member-is-not-active' %>"><%= member.active? %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>