<% @custom_posts = Post.published.order('revised_at DESC').first(2) # todo delete %>
<div class="featured-container">

  <div class="featured-well" data-background-image="<%= @custom_posts.first.stream_promo_photo_url %>">
    <div class="featured-tall">
      <div class="overlay">
        <div class="featured-tall-kicker">
          <%= link_to @custom_posts.first.rubric.name, public_tag_path(@custom_posts.first.rubric.slug) %>
        </div>
        <a href="<%= @custom_posts.first.featured_block_path(slot: '1', config: '112') %>" class="featured-link">
          <div class="featured-tall-headline">
            <%= @custom_posts.first.metadata_provider.display_headline %>
          </div>
        </a>
      </div>
    </div>
  </div>
  <div class="featured-well" data-background-image="<%= @custom_posts.last.stream_promo_photo_url %>">
    <div class="featured-tall">
      <div class="overlay">
        <div class="featured-tall-kicker">
          <%= link_to @custom_posts.last.rubric.name, public_tag_path(@custom_posts.last.rubric.slug) %>
        </div>
        <a href="<%= @custom_posts.last.featured_block_path(slot: '2', config: '112') %>" class="featured-link">
          <div class="featured-tall-headline">
            <%= @custom_posts.last.metadata_provider.display_headline %>
          </div>
        </a>
      </div>
    </div>
  </div>

  <div class="featured-well featured-clear-right">
    <div class="featured-short" data-background-image="https://d1n0c1ufntxbvh.cloudfront.net/photo/99dab106/13856/740x/">
      <div class="overlay">
        <div class="featured-short-kicker">
          <%= link_to "Life Inside", "/tag/life-inside" %>
        </div>
        <a href="https://www.kickstarter.com/projects/822494155/the-marshall-project-reports-on-life-inside" class="featured-link">
          <div class="featured-short-headline">
            Kickstarter: Support Voices from Inside the Criminal Justice System
          </div>
        </a>
      </div>
    </div>
    <div class="featured-short" data-background-image="<%= photo_for_slot(@featured_block, 1) %>">
      <div class="overlay">
        <div class="featured-short-kicker">
          <%= link_to rubric_name(@featured_block, 1), rubric_path(@featured_block, 1) %>
        </div>
        <a href="<%= @featured_block.post_for_slot(1).featured_block_path(slot: '4', config: '112') %>" class="featured-link">
          <div class="featured-short-headline">
            <%= @featured_block.post_for_slot(1).metadata_provider.display_headline %>
          </div>
        </a>
      </div>
    </div>
  </div>
  <div class="clear"></div>
</div>
