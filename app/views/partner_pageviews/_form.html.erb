<%= form_for(@partner_pageview) do |f| %>
  <% if @partner_pageview.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@partner_pageview.errors.count, "error") %> prohibited this partner_pageview from being saved:</h2>

      <ul>
      <% @partner_pageview.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :post_id %><br>
    <%= f.collection_select :post_id, Post.published.order('title ASC'), :id, :title, prompt: true %>
  </div>
  <br>
  <div class="field">
    <%= f.label :partner_id %> (or <%= link_to "create one", new_partner_path %>)<br>
    <%= f.collection_select :partner_id, Partner.all, :id, :name, prompt: true %>
  </div>
  <br>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_area :url %>
  </div>
  <br>
  <div class="field">
    <%= f.label :pageviews %><br>
    <%= f.number_field :pageviews %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Save Pageview Report" %>
  </div>
<% end %>
