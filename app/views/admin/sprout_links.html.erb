<table class="table table-striped">
<% @posts.each do |post| %>
	<tr>
		<td><%= post.title %></td>
		<td><%= link_to "Facebook", post.canonical_url + "?" + post.social_query_params(utm_source: 'facebook', utm_campaign: 'sprout') %></td>
		<td><%= link_to "Twitter",  post.canonical_url + "?" + post.social_query_params(utm_source: 'twitter',  utm_campaign: 'sprout') %></td>
	</tr>
<% end %>
</table>
