
<%= form_for(@new_post) do |f| %>
	<%= f.hidden_field :redirect, value: 'email_admin_index' %>
	<%= f.text_area :email_content, cols: 80, rows: 2, class: 'markdown-editor' %>
	<%= f.submit class: 'btn btn-primary' %>
<% end %>

<hr>

<table class="table table-striped">
	<thead>	
		<th>Email Content</th>
		<th>Tags</th>
		<th>Edit</th>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>	
				<td><%= post.email_content || "NO EMAIL VERSION: #{post.content.truncate(15)}" %></td>
				<td><%= post.tags.count %></td>				
				<td></td>
			</tr>
		<% end %>
	</tbody>
</table>