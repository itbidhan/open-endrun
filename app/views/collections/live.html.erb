<% content_for(:title) { ["Live", "The Marshall Project"].join(" | ") } %>
<% content_for(:canonical_url) { "tktk" } %>

<style>
  .header {
    background-color: #111;
    padding-bottom: 100px;
    text-align: center;
    padding-top: 100px;
  }
  .reading {
    padding-top: 30px;
    font-size: 60px;
    text-transform: uppercase;
    letter-spacing: 15px;
    color: #fff;
    font-family: MillerItalic;
    margin-bottom: 5px;
  }
  .logo {
    margin-bottom: 20px;
  }
  .tagline {
    font-family: PressuraLight;
    color: #fff;
    text-transform: uppercase;
  }
  .live {
    max-width: 650px;
    margin: 100px auto;
    font-family: PressuraLight;
    font-size: 16px;
    letter-spacing: -0.2px;
    word-spacing: -2px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  .link {
    padding: 40px;
    margin: 50px 30px;
    border-radius: 10px;
    font-size: 14px;
    border: 2px solid #cececc;
    box-shadow: 0.5em 0.5em 0 #cececc;
  }
  .sharer {
    margin-bottom: 20px;
    color: #888888;
  }
  .time {
    color: #888888;
    font-size: 12px;
  }
  .headline {
    font-size: 26px;
    font-family: Pressura;
    color: #353535;
    margin-bottom: 20px;
    letter-spacing: -1px;
  }
  .tags {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0;
    color: #cececc;
  }
  .tags a {
    margin-right: 10px;
    line-height: 1.7em;
    color: #888888;
    text-decoration: underline;
    white-space: nowrap;
  }
  .sharer a {
    font-family: Pressura;
    color: #ff0b3a;
    text-transform: uppercase;
  }
  a:hover {
    text-decoration: none !important;
  }
</style>

