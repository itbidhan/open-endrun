.photo-essay { 
	background-color: $rules;
	color: $white !important;
	padding-top: 1px;
	article p a {
		color: $white;
	}
	article p a:hover {
		color: $link;
	}
	.share-button {
		border: 2px solid $white !important;
		svg {
			path {
				fill: $white;
			}
		}
	}
	.share-button:hover {
		border: 2px solid $link !important;
			svg {
			path {
				fill: $black;
			}
		}
	}
	.tag-button {
		color: $black;
	}
	.col8 {
		margin-right: 0px !important;
	}
	.post-byline {
		color: $white;
	}
	.post-producers {
		color: $white;
		a {
		color: $white;
		}
	}
	.post-short-rule {
		border-top: 1px solid $white;
	}
	.outlined-button {
		color: $white !important;
		border: 2px solid $white !important;
		a {
			color: $white;
		}
		a:hover {
			color: $black;
		}
	}
	.outlined-button:hover {
		border: 2px solid $link !important;
	}
	.letter-desc { 
		a:hover {
			color: $timestamps;
		}
	}
	article p:last-of-type:after {
		display: none;
	}
}