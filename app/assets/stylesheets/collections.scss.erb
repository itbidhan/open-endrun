				font-family: MillerBold;
				text-transform: uppercase;
				font-size: 15px;
			}
			.kicker {
				font-family: PressuraLight;
				border-bottom: 1px solid $black;
				display: table;
				text-transform: uppercase;
				font-size: 14px;
				margin: 0 auto;
				margin-bottom: 40px;
				line-height: 1.9em;
			}
			ul {
				list-style-type: none;
				-webkit-padding-start: 0;
				padding-left: 0;
			}
			li {
				@include animate;
				float: left;
				position: relative;
				margin: 1.5%;
				width: 22%;
				background-color: $lightbg;
				font-family: MillerBold;
				font-size: 24px;
				border-radius: 3%;
				line-height: 1.2em;
				color: $white;
				text-align: center;
				cursor: pointer;
		    background-repeat: no-repeat;
		    background-position: 50% 50%;
				.logo {
					margin-bottom: 5px;
				}
				.link {
				    -webkit-box-flex: 0;
				    -webkit-flex: none;
				    -ms-flex: none;
				    flex: none;
				    max-width: 100%;
				    -webkit-box-flex: 1;
				    -webkit-flex: 1;
				    -ms-flex: 1;
				    flex: 1;
				}
				.link:after {
					content: attr(data-updated);
					font-family: PressuraLight;
					font-size: 12px;
					text-transform: uppercase;
					display: block;
					width: 100%;
					text-align: center;
				}
				.overlay {
					display: -webkit-box;
					display: -webkit-flex;
					display: -ms-flexbox;
					display: flex;
					-webkit-box-align: center;
					-webkit-align-items: center;
					-ms-flex-align: center;
					align-items: center;
					-webkit-box-pack: center;
					-webkit-justify-content: center;
					-ms-flex-pack: center;
					justify-content: center;
					border-radius: 3%;
					width: 100%;
					height: 100%;
					position: absolute;
					top: 0;
					left: 0;
					background: rgba(11,11,11,0.7);
					@include animate;
					svg {
						polygon {
							fill: $white !important;
						}
						path {
							fill: $white !important;
						}
					}
				}
				.card-tag-name {
					padding-left: 25px;
					padding-right: 25px;
				}
				.hover .overlay {
					background-color: $link;
					@include animate;
					a {
						color: $white !important;
					}
				}
				.overlay:hover {
					background-color: $link;
					@include animate;
					a {
						color: $white !important;
					}
				}
				&:after {
					content: "";
					display: block;
					padding-bottom: 100%;
				}
			}
			.photo {
				background-size: cover;
			}
			.no-photo {
				background-size: none !important;
				a {
					color: #ececea !important;
				}
				.link:after {
					color: #ececea !important;
				}
				.overlay {
					background: none;
					svg {
						polygon {
							fill: #ececea !important;
						}
						path {
							fill: #ececea!important;
						}
					}
				}
			}
			@media (max-width: 1050px){
				li {
					width: 30.333%
				}
			}
			@media (max-width: 800px){
				li {
					width: 47%;
				}
			}
			@media (max-width: 500px){
				li {
					width: 100%;
					margin-left: 0;
					margin-right: 0;
					margin-bottom: 20px;
				}
			}
			.hover:hover {
				background-color: $link;
				@include animate;
			}
			.hover .link:after, .hover a {
				color: $white;
				webkit-transition: none;
					-moz-transition: none;
					-o-transition: none;
					-webkit-transition: none;
					transition: none;
				@include animate;
			}
			.hover:hover .link:after, .hover:hover a {
				color: $white !important;
				webkit-transition: none;
					-moz-transition: none;
					-o-transition: none;
					-webkit-transition: none;
					transition: none;
				text-decoration: none;
				@include animate;
			}
			.hover .link .logo svg polygon {
				@include animate;
			}
			.hover:hover .link .logo svg polygon {
				fill: $white !important;
				@include animate;
			}
		}
		.col2 {
